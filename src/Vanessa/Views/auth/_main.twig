<!DOCTYPE html>
<html lang="en" class="h-100">
<head>
    <meta charset="UTF-8">
    <title>{{ title }} | {{ vanessa.settings.title }}</title>
    {% include './_includes/styles.twig' %}
</head>
<body class="h-100">
<nav class="navbar navbar-dark fixed-top bg-dark flex-md-nowrap p-0 shadow">
    <a class="navbar-brand col-sm-3 col-md-2 mr-0" href="{{ path_for('vanessa:start') }}">Vanessa CMS</a>
    <ul class="navbar-nav px-3">
        <li class="nav-item text-nowrap">
            <a class="nav-link" href="{{ path_for("vanessa:logout") }}">{{ __('Sign out') }}</a>
        </li>
    </ul>
</nav>
<nav class="col-sm-3 col-md-2 d-none d-md-block bg-light sidebar">
    <div class="d-flex align-items-start flex-column h-100">
        <div class="mb-auto w-100">
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link {{ is_current_path('vanessa:start') ? "active" : "" }}"
                       href="{{ path_for('vanessa:start') }}">
                        <span data-feather="home"></span> {{ __('Dashboard') }} <span
                                class="sr-only">(current)</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="w-100">
            <h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
                <span>{{ __("Settings") }}</span>
                <a class="d-flex align-items-center text-muted" href="#">
                    <span data-feather="plus-circle"></span>
                </a>
            </h6>
            <ul class="nav flex-column">
                <li class="nav-item">
                    <a class="nav-link {{ is_current_path('vanessa:templates:list') ? "active" : "" }}" href="{{ path_for('vanessa:templates:list') }}">
                        <span data-feather="home"></span> {{ __('Templates') }} <span
                                class="sr-only">(current)</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<main role="main" class="offset-2 col-12 col-md-10 d-flex flex-column h-100">
    {% block content %}{% endblock %}
</main>

{% include './_includes/scripts.twig' %}
</body>
</html>