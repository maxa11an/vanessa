{
    "name": "maxallan/vanessa",
    "description": "A smarter static webpage generator",
    "type": "library",
    "require": {
        "slim/slim": "^3.12",
        "rakibtg/sleekdb": "^1.0",
        "slim/twig-view": "^2.4"
    },
    "authors": [
        {
            "name": "Max Allan Niklasson",
            "email": "hello@maxallan.se"
        }
    ],
    "autoload": {
      "psr-4": {
        "Vanessa\\": "src/core",
        "Vanessa\\Admin\\": "src/front-end/admin",
        "Vanessa\\Publik\\": "src/front-end/public"
      }
    },
    "scripts": {
      "setup": "php src/.bin/install.php",
      "start": "php -S localhost:8080 -t public_html public_html/index.php",
      "generateController": "php src/.bin/createVanessaControllerSet.php"
    }
}
